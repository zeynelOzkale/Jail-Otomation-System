                    </div>
                    <div class="float-right icon-circle-medium  icon-box-lg  bg-info-light mt-1">
                        <img width="60" src="~/Content/img/logo.png" alt="Alternate Text" />
                    </div>
                </div>
            </div>
        </a>
    </div>
    <!-- ============================================================== -->
    <!-- end total earned   -->
    <!-- ============================================================== -->
</div>
@using (Html.BeginForm("Search", "public", FormMethod.Get, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="row" style="margin-top:80px;">
        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">

        </div>
        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
            <div class="card">
                <div class="card-body">
                    <h2 align="center">Visiter Registration</h2>
                    <form action="~/public/ApplyForAvisit" method="get">
                        @Html.EditorFor(model => model.prisonerid, new { htmlAttributes = new { @class = "form-control" } })
                        <br />
                        <button align="center;" class="btn btn-success btn-block" type="submit"> Find Prisoner </button>
                    </form>
                </div>
            </div>

        </div>

    </div>
}
