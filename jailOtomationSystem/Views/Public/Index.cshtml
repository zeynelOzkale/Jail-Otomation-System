@model jailOtomationSystem.viewModels.statisticsViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layoutpublic.cshtml";
}

<br />
<div class="row ">
    <!-- ============================================================== -->
    <!-- four widgets
        -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- total views   -->
