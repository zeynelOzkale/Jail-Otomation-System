        <a class="main-links" href="#">
            <div class="card">
                <div class="card-body">
                    <div class="d-inline-block">
                        <h4> @Html.DisplayFor(model => model.prisonCapacity) </h4>
                        <h4 class="mb-0"> prison Capacity </h4>
                    </div>
                    <div class="float-right icon-circle-medium  icon-box-lg  bg-info-light mt-1">
                        <img width="60" src="~/Content/img/logo.png" alt="Alternate Text" />
                    </div>
